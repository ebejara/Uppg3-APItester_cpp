{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb/lldb) Launch Calculator",
            "type": "cppdbg",
            "request": "launch",
            //"program": "${workspaceFolder}/output/calculator",      // Linux/macOS
             "program": "${workspaceFolder}/output/ApiTester.exe", // Windows
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",           // use "lldb" on macOS, "gdb" on Linux, "cppvsdbg" on Windows if using MSVC
            "miDebuggerPath": "gdb.exe",   // adjust if needed
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake Build"
        }
    ]
}