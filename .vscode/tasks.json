{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Debug"
            ],
            "group": "build",
            "dependsOn": "CMake Configure",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build & Run",
            "type": "shell",
            "command": "${workspaceFolder}/output/calculator.exe",  // Windows
            // "command": "${workspaceFolder}/output/calculator",    // Linux/macOS
            "group": "none",
            "dependsOn": "CMake Build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}